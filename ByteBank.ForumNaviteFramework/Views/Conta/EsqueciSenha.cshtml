@model ByteBank.ForumNaviteFramework.Models.ViewModels.ContaEsqueciSenhaViewModel

@{
    ViewBag.Title = "EsqueciSenha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Esqueci minha senha</h2>

<p>Preencha, por favor, seu email cadastrado no fórum que enviaremos para você as instruções de recuperação da sua senha!</p>

@using (Html.BeginForm())
{

    <div class="form-group">
        @Html.ValidationSummary("", new { @class = "text-danger" })

        @Html.EditorForModel()


        <br />
        <input type="submit" value="Enviar" class="btn btn-primary btn-block" />
    </div>
}
